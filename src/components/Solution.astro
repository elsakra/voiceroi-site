<section class="section-padding bg-gradient-to-br from-gray-50 to-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl md:text-5xl font-black text-black mb-6">
        Our Results-as-a-Service™
        <span class="text-lime-400">Solution</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        We don't sell you software and hope for the best. We build you a permanent, automated workforce that operates with guaranteed performance.
      </p>
    </div>
    
    <!-- Solution Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
      <!-- Content -->
      <div class="animate-on-scroll">
        <div class="space-y-8">
          <div class="flex items-start space-x-6">
            <div class="w-12 h-12 bg-lime-400 rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="text-black font-bold text-lg">5s</span>
            </div>
            <div>
              <h3 class="text-xl font-bold text-black mb-2">5 Second Response Time</h3>
              <p class="text-gray-600">No more missed opportunities. Every call answered instantly.</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-6">
            <div class="w-12 h-12 bg-lime-400 rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="text-black font-bold text-lg">85%</span>
            </div>
            <div>
              <h3 class="text-xl font-bold text-black mb-2">85% Higher Conversion</h3>
              <p class="text-gray-600">Turn prospects into customers with perfect follow-up.</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-6">
            <div class="w-12 h-12 bg-lime-400 rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="text-black font-bold text-lg">391%</span>
            </div>
            <div>
              <h3 class="text-xl font-bold text-black mb-2">391% Increase in Conversion Rates</h3>
              <p class="text-gray-600">Proven results across hundreds of businesses.</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-6">
            <div class="w-12 h-12 bg-lime-400 rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="text-black font-bold text-lg">24/7</span>
            </div>
            <div>
              <h3 class="text-xl font-bold text-black mb-2">24/7 Automated Revenue Capture</h3>
              <p class="text-gray-600">Your digital workforce never sleeps, never takes breaks.</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Visual -->
      <div class="animate-on-scroll">
        <div class="relative">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768292445/auto-site-builder/VoiceROI/image_1.png" 
            alt="VoiceROI Solution Dashboard"
            class="w-full rounded-2xl shadow-2xl"
            loading="lazy"
          />
          
          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 bg-lime-400 text-black px-4 py-2 rounded-full font-bold text-sm float-animation">
            ✓ No Training Required
          </div>
          <div class="absolute -bottom-4 -left-4 bg-black text-white px-4 py-2 rounded-full font-bold text-sm float-animation">
            ✓ No Sick Days
          </div>
        </div>
      </div>
    </div>
    
    <!-- Guarantee -->
    <div class="animate-on-scroll bg-black rounded-3xl p-8 md:p-12 text-center">
      <h3 class="text-3xl font-bold text-white mb-4">
        Our guarantee: If we don't deliver measurable results in 6 months,
        <span class="text-lime-400">we work for free until we do.</span>
      </h3>
      <p class="text-xl text-gray-300 mb-8">
        Your success is our business model.
      </p>
      <a href="/demo" class="btn-primary">
        Schedule Your Demo
      </a>
    </div>
  </div>
</section>