<header class="navbar fixed top-0 left-0 right-0 z-50 bg-black transition-all duration-300">
  <div class="container-custom">
    <nav class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-white hover:text-lime-400 transition-colors duration-300">
          VoiceROI
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-white hover:text-lime-400 transition-colors duration-300 font-medium">Home</a>
        <a href="/testimonials" class="text-white hover:text-lime-400 transition-colors duration-300 font-medium">Testimonials</a>
        <a href="/case-studies" class="text-white hover:text-lime-400 transition-colors duration-300 font-medium">Case Studies</a>
        <a href="/about" class="text-white hover:text-lime-400 transition-colors duration-300 font-medium">About</a>
        <a href="/contact" class="text-white hover:text-lime-400 transition-colors duration-300 font-medium">Contact</a>
      </div>
      
      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/demo" class="btn-primary">
          Book A Free Demo
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden text-white hover:text-lime-400 transition-colors" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
    
    <!-- Mobile Menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-4">
        <a href="/" class="block text-white hover:text-lime-400 transition-colors duration-300 font-medium">Home</a>
        <a href="/testimonials" class="block text-white hover:text-lime-400 transition-colors duration-300 font-medium">Testimonials</a>
        <a href="/case-studies" class="block text-white hover:text-lime-400 transition-colors duration-300 font-medium">Case Studies</a>
        <a href="/about" class="block text-white hover:text-lime-400 transition-colors duration-300 font-medium">About</a>
        <a href="/contact" class="block text-white hover:text-lime-400 transition-colors duration-300 font-medium">Contact</a>
        <a href="/demo" class="btn-primary inline-block mt-4">
          Book A Free Demo
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>